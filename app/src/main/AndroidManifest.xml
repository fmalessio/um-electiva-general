<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.electiva_general.um.misnumeritos">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_mis_numeritos"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_mis_numeritos"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".GameActivity" android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".LogInActivity"></activity>
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FinishedGameActivity"></activity>
        <activity android:name=".ScoreActivity"></activity>
        <activity android:name=".AboutActivity"></activity>
        <activity android:name=".InstructionsActivity"></activity>

    </application>

</manifest>