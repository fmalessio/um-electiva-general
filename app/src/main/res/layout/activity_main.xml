<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud"
    tools:context=".MainActivity">

    <!-- Logo -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="192dp"
        android:layout_height="139dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logo_mis_numeritos" />

    <!-- Go to game -->
    <Button
        android:id="@+id/playButton"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:background="@color/colorPrimaryDark"
        android:text="Jugar"
        android:textSize="20sp" />

    <!-- TODO: scores -->
    <Button
        android:id="@+id/scoresButton"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="270dp"
        android:background="@color/colorPrimaryDark"
        android:text="Scores"
        android:textSize="20sp" />

    <!-- TODO: instructions -->
    <Button
        android:id="@+id/instructionsButton"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:background="@color/colorPrimaryDark"
        android:text="Instrucciones"
        android:textSize="20sp" />

    <!-- TODO: About -->
    <Button
        android:id="@+id/aboutButton"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="370dp"
        android:background="@color/colorPrimaryDark"
        android:text="Acerca de"
        android:textSize="20sp" />

    <!-- TODO: User info and logOut -->

    <TextView
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameTextView"
        android:layout_centerHorizontal="true"
        android:text="¿Qué querés hacer?"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="145dp"
        android:text="nombreUsuario"
        android:textAlignment="center"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/idTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="idUsuario"
        android:textSize="10sp" />

    <Button
        android:id="@+id/logOutButton"
        android:layout_width="236dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:background="@color/colorPrimaryDark"
        android:onClick="logOut"
        android:text="@string/log_out" />

    <Button
        android:id="@+id/revokeButton"
        android:layout_width="236dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark"
        android:onClick="revoke"
        android:text="@string/permission_revoke" />
</RelativeLayout>