<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud"
    tools:context=".MainActivity">

    <!-- Logo -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="192dp"
        android:layout_height="159dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <!-- Go to game -->
    <Button
        android:id="@+id/playButton"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="215dp"
        android:text="Jugar" />

    <!-- TODO: scores -->

    <!-- TODO: About -->

    <!-- TODO: instructions -->

    <!-- TODO: User info and logOut -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:text="Hola "
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="219dp"
        android:text="¿Qué querés hacer?"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_marginStart="44dp"
        android:text="nombreUsuario"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/idTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="idUsuario"
        android:textSize="16sp" />

    <Button
        android:id="@+id/log_out"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/idTextView"
        android:layout_alignParentStart="true"
        android:onClick="logOut"
        android:text="@string/log_out" />

    <Button
        android:id="@+id/revoke"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/idTextView"
        android:layout_alignParentEnd="true"
        android:onClick="revoke"
        android:text="@string/permission_revoke" />
</RelativeLayout>